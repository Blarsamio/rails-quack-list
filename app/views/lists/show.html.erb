<div class="flex flex-col gap-y-10">
  <div class="flex flex-col justify-end self-center h-[60vh] w-full bg-cover top-0" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=@list.bookmarks.first.movie.poster_url %>')">
    <div class="content self-center pb-16 container">
      <p class="text-4xl font-bold text-white"><%= (@list.name).upcase %></p>
      <p class="text-xl text-white"><%= @list.bookmarks.count %> movies</p>
    </div>
  </div>

  <div class="container flex flex-col self-center w-full justify-center">
    <div class="grid grid-cols-3 gap-y-10 gap-x-1">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-span-1">
          <div class="bookmark-card shadow-md flex flex-col justify-end w-full h-[209px] bg-cover hover:cursor-pointer" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= bookmark.movie.poster_url %>');">
            <div class="content w-full h-[209px] pb-5 pl-5 flex flex-col justify-end">
              <p class="text-xl font-bold text-white card-text"><%= (bookmark.movie.title).upcase %></p>
              <p class="text-sm text-white card-text"><%= (bookmark.movie.rating).truncate(1) %></p>
              <p class="text-sm text-white card-text italic"><%= bookmark.movie.tagline %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    </div>
  </div>

  <div class="min-h-10 w-40 self-center bg-white rounded-t-xl flex justify-center text-black hover:bg-black hover:text-white transition-all ease-in-out sticky bottom-0 mt-10">
    <p class="self-center font-bold"><%= link_to "NEW BOOKMARK", new_list_bookmark_path(@list) %></p>
  </div>
</div>
