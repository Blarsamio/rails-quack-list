<div class="flex flex-col">
  <% @favorite = @favorites.sample %>
  <% if @favorites.empty? %>
  <div class="fotd flex h-[60vh] mb-10 w-full bg-cover top-0" style="background-image: url('https://m.media-amazon.com/images/M/MV5BZDkxZWJmYTYtZDk3NS00MWQ4LWE1YzctNDlkMWI1NjliYzQyXkEyXkFqcGdeQTNwaW5nZXN0._V1_.jpg')">
    <div class="fotd-content flex flex-col justify-end h-full w-full">
      <div class="container flex flex-row self-center hero h-1/3 bg-white w-full border-b-2">
        <div class="ml-5 h-[125px] w-[125px] bg-red-400 self-center bg-cover" style="background-image: url('https://images.mubicdn.net/images/avatars/145065/cache-145065-1594986014/images-large.jpg?size=1280x')"></div>
        <div class="self-center border-r-2 px-10 py-5"><%= @favorites.count %> LISTS</div>
        <div class="self-center border-r-2 px-10 py-5">WATCHLIST</div>
        <div class="self-center px-10 "><%= link_to "FAVORITES", user_favorites_path(current_user) %> </div>
      </div>
    </div>
  </div>
  <% else %>
  <div class="fotd flex h-[60vh] mb-10 w-full bg-cover top-0" style="background-image: url('<%=@favorite.movie.poster_url %>')">
    <div class="fotd-content flex flex-col justify-end h-full w-full">
      <div class="container flex flex-row self-center hero h-1/3 bg-white w-full border-b-2">
        <div class="ml-5 h-[125px] w-[125px] bg-red-400 self-center bg-cover" style="background-image: url('https://images.mubicdn.net/images/avatars/145065/cache-145065-1594986014/images-large.jpg?size=1280x')"></div>
        <div class="self-center border-r-2 px-10 py-5"><%= @favorites.count %> MOVIES AS FAVORITES</div>
        <div class="self-center border-r-2 px-10 py-5">WATCHLIST</div>
        <div class="self-center px-10 "><%= link_to "FAVORITES", user_favorites_path(current_user) %></div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="container flex flex-col self-center w-full justify-center">
    <div class="grid grid-cols-3 gap-y-10 gap-x-1">
      <%= link_to  new_user_favorite_path(current_user) do %>
        <div class="new-card shadow-md flex flex-col justify-end w-full h-[209px]">
          <div class="content w-full h-[209px] pb-5 pl-5 flex flex-col justify-end">
            <p class="text-xl font-bold text-white card-text">ADD A NEW FAVORITE</p>
          </div>
        </div>
      <% end %>
    <% @favorites.each do |favorite| %>
      <% if @favorites.empty? %>
        <a href="/movies/<%=favorite.movie.id %>" class="col-span-1">
          <div class="bookmark-card shadow-md flex flex-col justify-end w-full h-[209px] bg-cover hover:cursor-pointer" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://m.media-amazon.com/images/M/MV5BZDkxZWJmYTYtZDk3NS00MWQ4LWE1YzctNDlkMWI1NjliYzQyXkEyXkFqcGdeQTNwaW5nZXN0._V1_.jpg');">
            <div class="content w-full h-[209px] pb-5 pl-5 flex flex-col justify-end">
              <p class="text-xl font-bold text-white card-text"><%= (favorite.movie.title).upcase %></p>
            </div>
          </div>
        </a>
        <% else %>
        <a href="/movies/<%=favorite.movie.id %>" class="col-span-1">
          <div class="bookmark-card shadow-md flex flex-col justify-end w-full h-[209px] bg-cover hover:cursor-pointer" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= favorite.movie.poster_url %>');">
            <div class="content w-full h-[209px] pb-5 pl-5 flex flex-col justify-end">
              <p class="text-xl font-bold text-white card-text"><%= (favorite.movie.title).upcase %></p>
            </div>
          </div>
        </a>
      <% end %>
      <% end %>
    </div>
</div>
